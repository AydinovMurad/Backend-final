@model RegisterVm
<section class="breadcrumb-section">
	<h2 class="sr-only">Site Breadcrumb</h2>
	<div class="container">
		<div class="breadcrumb-contents">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
					<li class="breadcrumb-item active"><a asp-controller="Account" asp-action="Login">Login</a></li>
				</ol>
			</nav>
		</div>
	</div>
</section>
<!--=============================================
=            Login Register page content         =
=============================================-->
<main class="page-section inner-page-sec-padding-bottom">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
				<!-- Login Form s-->
				<form method="post" asp-action="Register">
					<div class="login-form">
						<h4 class="login-title">New Customer</h4>
						<p><span class="font-weight-bold">I am a new customer</span></p>
						<div class="row">
							<div class="col-md-12 col-12 mb--15">
								<input asp-for="Name" class="mb-0 form-control" id="name"
									   placeholder="Enter your name">
								<span asp-validation-for="Name"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<input asp-for="Surname" class="mb-0 form-control" id="name"
									   placeholder="Enter your surname">
								<span asp-validation-for="Surname"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<input asp-for="Username" class="mb-0 form-control" id="name"
									   placeholder="Enter your user name">
								<span asp-validation-for="Username"></span>
							</div>
							<div class="col-12 mb--20">
								<input asp-for="Email" class="mb-0 form-control" id="email" placeholder="Enter Your Email Address Here..">
								<span asp-validation-for="Email"></span>
							</div>
							<div class="col-lg-6 mb--20">
								<input asp-for="Password" class="mb-0 form-control" id="password" placeholder="Enter your password">
								<span asp-validation-for="Password"></span>
							</div>
							<div class="col-lg-6 mb--20">
								<input asp-for="ConfirmPassword" class="mb-0 form-control" id="repeat-password" placeholder="Confirm your password">
								<span asp-validation-for="ConfirmPassword"></span>
							</div>
							<div class="col-lg-6 mb--20">
								<div class="custome-radio d-flex gap-3 align-items-center ">
									<input asp-for="IsVendor" style="width:20px;" />
									<label for="exampleRadios3" data-bs-toggle="collapse" data-target="#bankTranfer" aria-controls="bankTranfer">I am a Author</label>
								</div>
							</div>
							<div class="text-danger" asp-validation-summary="ModelOnly"></div>
							<div class="col-md-12">
								<button class="btn btn-outlined">Register</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</main>
